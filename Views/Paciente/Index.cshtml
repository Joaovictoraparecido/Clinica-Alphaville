@model IEnumerable<CLINICA_ALPHAVILLE.Models.ListaPaciente>

@{
    ViewData["Title"] = "Pacientes";
}

<div class="container">
    <h1 class="text-center">PACIENTES</h1>
    <div class="d-flex justify-content-center">
        <table id="patientTable" class="table table-striped">
            <thead>
                <tr>
                    <th class="col-2">Nome</th>
                    <th class="col-1">Sexo</th>
                    <th class="col-2">Data de Nascimento</th>
                    <th class="col-2">Profissão</th>
                    <th class="col-1">Estado</th>
                    <th class="col-2">Cidade</th>
                    <th class="col-1">Bairro</th>
                    <th class="col-1">CEP</th>
                    <th class="col-2">Horários Disponíveis</th>
                    <th class="col-2">Nome do Pai</th>
                    <th class="col-2">Nome da Mãe</th>
                    <th class="col-2">Responsável</th>
                    <th class="col-1">Telefone</th>
                    <th class="col-1">Celular</th>
                    <th class="col-1"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Sexo)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.DataDeNascimento)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Profissao)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Cidade)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Bairro)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Cep)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.HorariosDisponiveis)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.NomeDoPai)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.NomeDaMae)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Responsavel)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Celular)</td>
              
                        <td class="d-flex justify-content-start">
                         @*    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mr-2">Editar</a> *@
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info mr-2">Detalhes</a>
                         @*    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a> *@
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.print.min.js"></script>
    <script>
        // $(document).ready(function () {
        //     $('#patientTable').DataTable({
        //         "paging": true,
        //         "dom": 'Bfrtip',
        //         "buttons": ['excel', 'pdf', 'print']
        //     });
        // });

        $(document).ready(function () {
            $('#patientTable').DataTable({
                "paging": true,
                "dom": 'Bfrtip',
                "buttons": [
                    {
                        extend: 'excel',
                        text: 'Exportar para Excel',
                        className: 'btn btn-success',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'pdf',
                        text: 'Exportar para PDF',
                        className: 'btn btn-danger',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'print',
                        text: 'Imprimir',
                        className: 'btn btn-primary',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ]
            });
        });

    </script>
}

